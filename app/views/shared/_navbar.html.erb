<div class="navbar sticky-top navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid justify-content-space-between">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%#= image_tag "logo_artbnb.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="navbar-nav me-auto">
        <% if user_signed_in? %>
        <div class="nav-box" >
          <div class="nav-item dropdown">
          <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa-solid fa-bars m-2"></i>
            <%#= cl_image_tag current_user.photo.key, class: "avatar", alt: "dropdown menu" %>
          </a>
            <div class="dropdown-menu dropdown-menu-end mt-3" aria-labelledby="navbarDropdown">
              <%= link_to "My projects", projects_path, class: "nav-link" %>
              <%= link_to "Settings", edit_user_registration_path, class: "nav-link" %>
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
            </div>
          </div>
        <% else %>
          <div class="nav-box">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
