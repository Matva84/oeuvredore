<%= simple_form_for @project do |f| %>
  <div class="form-group mt-3 ">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <div class="row">
      <div class="col">
        <%= f.input :initial_start_at, as: :date, class: 'form-control' %>
      </div>
      <div class="col">
        <%= f.input :initial_end_at, as: :date, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group mt-3">
    <%= f.label :progress %>
    <%= f.text_field :progress, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :customer_budget %>
    <%= f.text_field :customer_budget, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :total_expenses %>
    <%= f.text_field :total_expenses, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.submit 'CrÃ©er nouveau projet', class: 'btn btn-success' %>
  </div>

<% end %>
