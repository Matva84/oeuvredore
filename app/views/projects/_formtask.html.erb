<%= simple_form_for [project, task] do |f| %>
  <div class="form-group mt-3 ">
    <%= f.label :name, "Nom de la tâche" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :description , "Description de la tâche" %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :category, "Catégorie de travaux" %>
    <%= f.text_field :category, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <div class="row">
      <div class="col">
        <%= f.label :start_at, "Début de réalisation" %>
        <%= f.input :start_at, as: :string, input_html: { data: { controller: "datepicker" } }, label: false %>
      </div>
      <div class="col">
        <%= f.label :end_at, "Fin de réalisation" %>
        <%= f.input :end_at, as: :string, input_html: { data: { controller: "datepicker" } }, label: false %>
      </div>
    </div>
  </div>

  <div class="form-group mt-3">
    <%= f.label :progress, "Progression de réalisation" %>
    <%= f.text_field :progress, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :budget, "Coût" %>
    <%= f.text_field :budget, class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.submit 'Ajouter', class: 'main-btn-rounded' %>
  </div>

<% end %>
